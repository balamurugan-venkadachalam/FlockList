{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/app.js",
  "private": true,
  "scripts": {
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:unit": "vitest run src/__tests__/unit",
    "test:integration": "vitest run src/__tests__/integration",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts",
    "api:validate": "node scripts/validate-openapi.js",
    "api:serve": "swagger-ui-express -e openapi.yaml",
    "api:generate": "npx redoc-cli bundle openapi.yaml -o docs/api.html",
    "api:bundle": "npm run api:validate && npm run api:generate",
    "precommit": "npm run api:validate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.8.4",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "node-mailjet": "^6.0.5",
    "swagger-ui-express": "^4.6.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.13",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/express-validator": "^2.20.33",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^18.15.11",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/coverage-v8": "^3.1.1",
    "colors": "^1.4.0",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "js-yaml": "^4.1.0",
    "redoc-cli": "^0.13.21",
    "supertest": "^6.3.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.3",
    "vitest": "^3.1.1"
  }
}
