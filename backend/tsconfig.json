{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vitest/globals", "node"],
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "lib": ["es2018", "dom"],
    "noEmit": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "src/__tests__/**/*"],
  "exclude": ["node_modules", "dist"]
} 